<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.tom.projetcsc">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <uses-feature android:name="android.hardware.sensor.accelerometer" />
    <uses-feature android:name="android.hardware.sensor.light" />
    <uses-feature android:name="android.hardware.sensor.gyroscope" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ProjetCSC">
        <activity android:name=".WeatherActivity" />
        <activity android:name=".ChooseActivity" />
        <activity android:name=".OrientationActivity" />
        <activity android:name=".FirstActivity" />
        <activity android:name=".PauseActivity" />
        <activity
            android:name=".TextContactActivity"
            android:parentActivityName=".MainActivity" />
        <activity android:name=".ScoresActivity" />
        <activity
            android:name=".TruthDareActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".FastPassActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".LightActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".ShakeActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".SlowMovementActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".MovementActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".CallContactActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".PokemonActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".GameActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".SetPlayersActivity"
            android:parentActivityName=".MainActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".GamePreferences"
            android:label="GamePrefs" />
    </application>

</manifest>